<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Sistema de Gerenciamento de Dados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-database"></i> Sistema de Gerenciamento
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="fas fa-home"></i> Dashboard</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="cadastrosDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-plus-circle"></i> Cadastros
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/cadastros/familias"><i class="fas fa-sitemap"></i> Famílias</a></li>
              <li><a class="dropdown-item" href="/cadastros/tamanhos"><i class="fas fa-expand"></i> Tamanhos</a></li>
              <li><a class="dropdown-item" href="/cadastros/cores"><i class="fas fa-palette"></i> Cores</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="planejamentoDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-calendar-alt"></i> Planejamento
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/planejamento/ordem-compra"><i class="fas fa-shopping-cart"></i> Ordem de Compra</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="executivoDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-chart-line"></i> Executivo
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item active" href="/executivo/analise-estoque"><i class="fas fa-warehouse"></i> Análise de Estoque</a></li>
            </ul>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-user"></i> <%= typeof user !== 'undefined' ? user.email : 'Usuário' %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Sair</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <h1><i class="fas fa-chart-line"></i> <%= title %></h1>
          <div>
            <button class="btn btn-primary me-2" onclick="atualizarDados()">
              <i class="fas fa-sync"></i> Atualizar Dados
            </button>
            <button class="btn btn-success" onclick="exportarDados()">
              <i class="fas fa-download"></i> Exportar
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card bg-primary text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-boxes"></i> Total Produtos</h5>
            <h3><%= estatisticas.totalProdutos %></h3>
            <small>Produtos únicos</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-success text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-weight"></i> Peso Total</h5>
            <h3><%= estatisticas.pesoTotal %></h3>
            <small>Toneladas</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-warning text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-map-marker-alt"></i> Localizações</h5>
            <h3><%= estatisticas.totalLocalizacoes %></h3>
            <small>Locais ativos</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-info text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-tags"></i> Famílias</h5>
            <h3><%= estatisticas.totalFamilias %></h3>
            <small>Categorias</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Filtros -->
    <div class="row mb-4">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5><i class="fas fa-filter"></i> Filtros</h5>
          </div>
          <div class="card-body">
            <form method="GET" action="/executivo/analise-estoque" class="row g-3">
              <div class="col-md-2">
                <label for="familia" class="form-label">Família</label>
                <select class="form-select" id="familia" name="familia">
                  <option value="">Todas as famílias</option>
                  <% filtrosEstoque.familias.forEach(function(fam) { %>
                    <option value="<%= fam.familia %>"
                            <%= filtrosAtivos.familia === fam.familia ? 'selected' : '' %>>
                      <%= fam.familia %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <label for="cor" class="form-label">Cor</label>
                <select class="form-select" id="cor" name="cor">
                  <option value="">Todas as cores</option>
                  <% filtrosEstoque.cores.forEach(function(c) { %>
                    <option value="<%= c.cor %>"
                            <%= filtrosAtivos.cor === c.cor ? 'selected' : '' %>>
                      <%= c.cor %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <label for="tamanho" class="form-label">Tamanho</label>
                <select class="form-select" id="tamanho" name="tamanho">
                  <option value="">Todos os tamanhos</option>
                  <% filtrosEstoque.tamanhos.forEach(function(t) { %>
                    <option value="<%= t.tamanho %>"
                            <%= filtrosAtivos.tamanho === t.tamanho ? 'selected' : '' %>>
                      <%= t.tamanho %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <label for="empresa" class="form-label">Empresa</label>
                <select class="form-select" id="empresa" name="empresa">
                  <option value="">Todas as empresas</option>
                  <% filtrosEstoque.empresas.forEach(function(emp) { %>
                    <option value="<%= emp.empresa %>"
                            <%= filtrosAtivos.empresa === emp.empresa ? 'selected' : '' %>>
                      <%= emp.empresa %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <label for="ano" class="form-label">Ano</label>
                <select class="form-select" id="ano" name="ano">
                  <option value="">Todos os anos</option>
                  <% filtrosEstoque.anos.forEach(function(a) { %>
                    <option value="<%= a.ano %>"
                            <%= filtrosAtivos.ano === a.ano ? 'selected' : '' %>>
                      <%= a.ano %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="col-md-2">
                <label for="mes" class="form-label">Mês</label>
                <select class="form-select" id="mes" name="mes">
                  <option value="">Todos os meses</option>
                  <% filtrosEstoque.meses.forEach(function(m) { %>
                    <option value="<%= m.mes %>"
                            <%= filtrosAtivos.mes === m.mes ? 'selected' : '' %>>
                      <%= m.mes %>
                    </option>
                  <% }); %>
                </select>
              </div>
              <div class="col-12">
                <button type="submit" class="btn btn-primary me-2">
                  <i class="fas fa-search"></i> Filtrar
                </button>
                <a href="/executivo/analise-estoque" class="btn btn-secondary">
                  <i class="fas fa-times"></i> Limpar Filtros
                </a>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>

    <!-- Abas de Análise -->
    <div class="row">
      <div class="col-12">
        <ul class="nav nav-tabs" id="analiseTab" role="tablist">
          <li class="nav-item" role="presentation">
            <button class="nav-link active" id="material-tab" data-bs-toggle="tab" data-bs-target="#material" type="button" role="tab">
              <i class="fas fa-box"></i> Por Material
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="localizacao-tab" data-bs-toggle="tab" data-bs-target="#localizacao" type="button" role="tab">
              <i class="fas fa-map-marker-alt"></i> Por Localização
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="familia-tab" data-bs-toggle="tab" data-bs-target="#familia" type="button" role="tab">
              <i class="fas fa-tags"></i> Por Família
            </button>
          </li>
          <li class="nav-item" role="presentation">
            <button class="nav-link" id="faturamento-tab" data-bs-toggle="tab" data-bs-target="#faturamento" type="button" role="tab">
              <i class="fas fa-chart-line"></i> Faturamento
            </button>
          </li>
        </ul>

        <div class="tab-content" id="analiseTabContent">
          <!-- Aba Material -->
          <div class="tab-pane fade show active" id="material" role="tabpanel">
            <div class="card mt-3">
              <div class="card-header">
                <h5><i class="fas fa-box"></i> Análise por Material</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Código</th>
                        <th>Produto</th>
                        <th>Família</th>
                        <th>Quantidade Total</th>
                        <th>Peso Total (kg)</th>
                        <th>Registros</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% dadosPorMaterial.forEach(function(item) { %>
                        <tr>
                          <td><%= item.codigo %></td>
                          <td><%= item.produto_nome %></td>
                          <td><%= item.familia || 'N/A' %></td>
                          <td class="text-end"><%= item.quantidade_total %></td>
                          <td class="text-end"><%= item.peso_total %></td>
                          <td class="text-center"><%= item.registros %></td>
                        </tr>
                      <% }); %>
                      <% if (dadosPorMaterial.length === 0) { %>
                        <tr>
                          <td colspan="6" class="text-center text-muted">
                            <i class="fas fa-info-circle"></i> Nenhum dado encontrado com os filtros aplicados.
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          <!-- Aba Localização -->
          <div class="tab-pane fade" id="localizacao" role="tabpanel">
            <div class="card mt-3">
              <div class="card-header">
                <h5><i class="fas fa-map-marker-alt"></i> Análise por Localização</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Localização</th>
                        <th>Produtos Únicos</th>
                        <th>Quantidade Total</th>
                        <th>Peso Total (kg)</th>
                        <th>Registros</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% dadosPorLocalizacao.forEach(function(item) { %>
                        <tr>
                          <td><%= item.localizacao %></td>
                          <td class="text-center"><%= item.produtos_unicos %></td>
                          <td class="text-end"><%= item.quantidade_total %></td>
                          <td class="text-end"><%= item.peso_total %></td>
                          <td class="text-center"><%= item.registros %></td>
                        </tr>
                      <% }); %>
                      <% if (dadosPorLocalizacao.length === 0) { %>
                        <tr>
                          <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-info-circle"></i> Nenhum dado encontrado com os filtros aplicados.
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>

          <!-- Aba Família -->
          <div class="tab-pane fade" id="familia" role="tabpanel">
            <div class="card mt-3">
              <div class="card-header">
                <h5><i class="fas fa-tags"></i> Análise por Família</h5>
              </div>
              <div class="card-body">
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Família</th>
                        <th>Produtos Únicos</th>
                        <th>Quantidade Total</th>
                        <th>Peso Total (kg)</th>
                        <th>Registros</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% dadosPorFamilia.forEach(function(item) { %>
                        <tr>
                          <td><%= item.familia %></td>
                          <td class="text-center"><%= item.produtos_unicos %></td>
                          <td class="text-end"><%= item.quantidade_total %></td>
                          <td class="text-end"><%= item.peso_total %></td>
                          <td class="text-center"><%= item.registros %></td>
                        </tr>
                      <% }); %>
                      <% if (dadosPorFamilia.length === 0) { %>
                        <tr>
                          <td colspan="5" class="text-center text-muted">
                            <i class="fas fa-info-circle"></i> Nenhum dado encontrado com os filtros aplicados.
                          </td>
                        </tr>
                      <% } %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script>
    // Dados dos filtros ativos passados do servidor
    const filtrosAtivos = {
      material: '<%= filtrosAtivos.material || "" %>',
      localizacao: '<%= filtrosAtivos.localizacao || "" %>',
      familia: '<%= filtrosAtivos.familia || "" %>'
    };

    function atualizarDados() {
      // Recarregar a página para atualizar os dados
      window.location.reload();
    }

    function exportarDados() {
      // Criar URL com os filtros atuais
      let url = '/executivo/analise-estoque/export?';
      if (filtrosAtivos.material) url += `material=${encodeURIComponent(filtrosAtivos.material)}&`;
      if (filtrosAtivos.localizacao) url += `localizacao=${encodeURIComponent(filtrosAtivos.localizacao)}&`;
      if (filtrosAtivos.familia) url += `familia=${encodeURIComponent(filtrosAtivos.familia)}&`;

      // Remover o último & se existir
      if (url.endsWith('&')) url = url.slice(0, -1);

      // Por enquanto, apenas mostrar a URL (implementar exportação depois)
      alert('Funcionalidade de exportação será implementada. URL: ' + url);
    }

    // Função para formatar números
    function formatarNumero(num) {
      if (num === null || num === undefined) return '0';
      return new Intl.NumberFormat('pt-BR').format(num);
    }

    // Carregar dados iniciais quando a página carregar
    document.addEventListener('DOMContentLoaded', function() {
      console.log('Página de Análise de Estoque carregada');

      // Adicionar formatação aos números nas tabelas
      const numeroCells = document.querySelectorAll('td.text-end');
      numeroCells.forEach(cell => {
        const valor = parseFloat(cell.textContent.replace(',', '.'));
        if (!isNaN(valor)) {
          cell.textContent = formatarNumero(valor);
        }
      });
    });

    // Adicionar funcionalidade de busca em tempo real nos filtros
    document.getElementById('material').addEventListener('input', function() {
      // Opcional: implementar busca em tempo real
      console.log('Busca por material:', this.value);
    });
  </script>
</body>
</html>