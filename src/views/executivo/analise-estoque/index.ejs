<!DOCTYPE html>
<html lang="pt-BR">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %> - Sistema de Gerenciamento de Dados</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <div class="container">
      <a class="navbar-brand" href="/">
        <i class="fas fa-database"></i> Sistema de Gerenciamento
      </a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item">
            <a class="nav-link" href="/"><i class="fas fa-home"></i> Dashboard</a>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="cadastrosDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-plus-circle"></i> Cadastros
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/cadastros/familias"><i class="fas fa-sitemap"></i> Famílias</a></li>
              <li><a class="dropdown-item" href="/cadastros/tamanhos"><i class="fas fa-expand"></i> Tamanhos</a></li>
              <li><a class="dropdown-item" href="/cadastros/cores"><i class="fas fa-palette"></i> Cores</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="planejamentoDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-calendar-alt"></i> Planejamento
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/planejamento/ordem-compra"><i class="fas fa-shopping-cart"></i> Ordem de Compra</a></li>
            </ul>
          </li>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle active" href="#" id="executivoDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-chart-line"></i> Executivo
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item active" href="/executivo/analise-estoque"><i class="fas fa-warehouse"></i> Análise de Estoque</a></li>
            </ul>
          </li>
        </ul>
        <ul class="navbar-nav">
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown">
              <i class="fas fa-user"></i> <%= typeof user !== 'undefined' ? user.email : 'Usuário' %>
            </a>
            <ul class="dropdown-menu">
              <li><a class="dropdown-item" href="/logout"><i class="fas fa-sign-out-alt"></i> Sair</a></li>
            </ul>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <div class="row mb-4">
      <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
          <h1><i class="fas fa-chart-line"></i> <%= title %></h1>
          <div>
            <button class="btn btn-primary me-2" onclick="atualizarDados()">
              <i class="fas fa-sync"></i> Atualizar Dados
            </button>
            <button class="btn btn-success" onclick="importarArquivos()">
              <i class="fas fa-upload"></i> Importar Arquivos
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Cards de Resumo -->
    <div class="row mb-4">
      <div class="col-md-3">
        <div class="card bg-primary text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-boxes"></i> Total Produtos</h5>
            <h3 id="totalProdutos">0</h3>
            <small>Produtos em estoque</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-success text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-weight"></i> Peso Total</h5>
            <h3 id="pesoTotal">0.00</h3>
            <small>Toneladas</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-warning text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-map-marker-alt"></i> Localizações</h5>
            <h3 id="totalLocalizacoes">0</h3>
            <small>Locais ativos</small>
          </div>
        </div>
      </div>
      <div class="col-md-3">
        <div class="card bg-info text-white">
          <div class="card-body">
            <h5 class="card-title"><i class="fas fa-tags"></i> Famílias</h5>
            <h3 id="totalFamilias">0</h3>
            <small>Categorias</small>
          </div>
        </div>
      </div>
    </div>

    <!-- Tabela de Dados -->
    <div class="row">
      <div class="col-12">
        <div class="card">
          <div class="card-header">
            <h5><i class="fas fa-table"></i> Dados de Estoque</h5>
          </div>
          <div class="card-body">
            <div class="table-responsive">
              <table class="table table-striped table-hover">
                <thead class="table-dark">
                  <tr>
                    <th>Arquivo</th>
                    <th>Localização</th>
                    <th>Código</th>
                    <th>Produto</th>
                    <th>Família</th>
                    <th>Quantidade</th>
                    <th>Peso Líq.</th>
                    <th>Peso Bruto</th>
                    <th>Status</th>
                  </tr>
                </thead>
                <tbody id="tabelaEstoque">
                  <tr>
                    <td colspan="9" class="text-center text-muted">
                      <i class="fas fa-info-circle"></i> Clique em "Atualizar Dados" para carregar as informações.
                    </td>
                  </tr>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function atualizarDados() {
      // TODO: Implementar atualização de dados via AJAX
      alert('Funcionalidade de atualização será implementada na próxima etapa.');
    }

    function importarArquivos() {
      // TODO: Implementar importação de arquivos
      alert('Funcionalidade de importação será implementada na próxima etapa.');
    }

    // Carregar dados iniciais quando a página carregar
    document.addEventListener('DOMContentLoaded', function() {
      // TODO: Carregar estatísticas iniciais
      console.log('Página de Análise de Estoque carregada');
    });
  </script>
</body>
</html>