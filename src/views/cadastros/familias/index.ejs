<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Sistema de Gerenciamento de Dados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="/css/styles.css" rel="stylesheet">
</head>
<body>
    <%- include('../../layouts/partials/header') %>

    <div class="container-fluid mt-4">
        <div class="row mb-4">
            <div class="col-12">
                <div class="page-header">
                    <h1 class="page-title">
                        <i class="fas fa-sitemap text-primary-custom me-2"></i>
                        <%= title %>
                        <span class="badge bg-primary ms-2"><%= typeof totalFamilias !== 'undefined' ? totalFamilias : 0 %></span>
                    </h1>
                    <p class="page-subtitle">Gerencie as famílias de produtos do sistema</p>
                </div>
            </div>
        </div>

        <div class="row mb-4">
            <div class="col-12">
                <div class="d-flex justify-content-between align-items-center">
                    <div></div>
                    <a href="/cadastros/familias/novo" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Nova Família
                    </a>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-header">
                        <h5><i class="fas fa-list me-2"></i>Famílias Cadastradas</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Nome</th>
                                        <th>Descrição</th>
                                        <th>Código Legado</th>
                                        <th>Status</th>
                                        <th>Criado em</th>
                                        <th>Ações</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% familias.forEach(familia => { %>
                                        <tr>
                                            <td><%= familia.id %></td>
                                            <td><%= familia.nome %></td>
                                            <td><%= familia.descricao || '-' %></td>
                                            <td><%= familia.legado || '-' %></td>
                                            <td>
                                                <% if (familia.ativo) { %>
                                                    <span class="badge bg-success">Ativo</span>
                                                <% } else { %>
                                                    <span class="badge bg-secondary">Inativo</span>
                                                <% } %>
                                            </td>
                                            <td><%= new Date(familia.created_at).toLocaleDateString('pt-BR') %></td>
                                            <td>
                                                <a href="/cadastros/familias/<%= familia.id %>/editar" class="btn btn-sm btn-outline-primary me-1">
                                                    <i class="fas fa-edit"></i> Editar
                                                </a>
                                                <form method="POST" action="/cadastros/familias/<%= familia.id %>/delete" class="d-inline" onsubmit="return confirm('Tem certeza que deseja excluir esta família?')">
                                                    <button type="submit" class="btn btn-sm btn-outline-danger">
                                                        <i class="fas fa-trash"></i> Excluir
                                                    </button>
                                                </form>
                                            </td>
                                        </tr>
                                    <% }) %>
                                    <% if (familias.length === 0) { %>
                                        <tr>
                                            <td colspan="7" class="text-center text-muted py-4">
                                                <i class="fas fa-info-circle fa-2x mb-2"></i>
                                                <br>Nenhuma família cadastrada ainda.
                                            </td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%- include('../../layouts/partials/footer') %>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>