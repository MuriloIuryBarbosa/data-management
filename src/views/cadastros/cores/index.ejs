<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4><i class="fas fa-palette me-2"></i>Cores</h4>
        <div>
          <span class="badge bg-info me-2">
            <i class="fas fa-list me-1"></i><%= totalCores %> cores cadastradas
          </span>
          <a href="/cadastros/cores/novo" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Nova Cor
          </a>
        </div>
      </div>
      <div class="card-body">
        <% if (cores && cores.length > 0) { %>
          <div class="table-responsive">
            <table class="table table-striped table-hover">
              <thead class="table-dark">
                <tr>
                  <th>ID</th>
                  <th>Nome</th>
                  <th>Código Hex</th>
                  <th>Legado</th>
                  <th>Status</th>
                  <th>Ações</th>
                </tr>
              </thead>
              <tbody>
                <% cores.forEach(cor => { %>
                  <tr>
                    <td><%= cor.id %></td>
                    <td><%= cor.nome %></td>
                    <td>
                      <% if (cor.codigo_hex) { %>
                        <code><%= cor.codigo_hex %></code>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (cor.legado) { %>
                        <span class="badge bg-secondary"><%= cor.legado %></span>
                      <% } else { %>
                        <span class="text-muted">-</span>
                      <% } %>
                    </td>
                    <td>
                      <% if (cor.ativo === 1) { %>
                        <span class="badge bg-success">Ativo</span>
                      <% } else { %>
                        <span class="badge bg-danger">Inativo</span>
                      <% } %>
                    </td>
                    <td>
                      <div class="btn-group" role="group">
                        <a href="/cadastros/cores/<%= cor.id %>/editar" class="btn btn-sm btn-outline-primary" title="Editar">
                          <i class="fas fa-edit"></i>
                        </a>
                        <form method="POST" action="/cadastros/cores/<%= cor.id %>/delete" style="display: inline;" onsubmit="return confirm('Tem certeza que deseja excluir a cor <%= cor.nome %>?')">
                          <button type="submit" class="btn btn-sm btn-outline-danger" title="Excluir">
                            <i class="fas fa-trash"></i>
                          </button>
                        </form>
                      </div>
                    </td>
                  </tr>
                <% }); %>
              </tbody>
            </table>
          </div>
        <% } else { %>
          <div class="text-center py-5">
            <i class="fas fa-palette fa-3x text-muted mb-3"></i>
            <h5 class="text-muted">Nenhuma cor cadastrada</h5>
            <p class="text-muted">Comece cadastrando sua primeira cor.</p>
            <a href="/cadastros/cores/novo" class="btn btn-primary">
              <i class="fas fa-plus me-1"></i>Cadastrar Primeira Cor
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>