<div class="content-wrapper">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-history text-primary me-2"></i>
                Histórico da Ordem de Compra #<%= ordemCompra.id %>
            </h1>
            <p class="text-muted mb-0">Registro de todas as alterações realizadas</p>
        </div>
        <div>
            <a href="/planejamento/ordem-compra/<%= ordemCompra.id %>" class="btn btn-info-custom me-2">
                <i class="fas fa-eye me-2"></i>
                Ver Ordem
            </a>
            <a href="/planejamento/ordem-compra/<%= ordemCompra.id %>/editar" class="btn btn-primary-custom me-2">
                <i class="fas fa-edit me-2"></i>
                Editar
            </a>
            <a href="/planejamento/ordem-compra" class="btn btn-secondary-custom">
                <i class="fas fa-arrow-left me-2"></i>
                Voltar
            </a>
        </div>
    </div>

    <!-- Informações da Ordem -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-shopping-cart text-primary me-2"></i>
                        Ordem de Compra #<%= ordemCompra.id %>
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3">
                            <strong>SKU:</strong><br>
                            <code><%= ordemCompra.sku %></code>
                        </div>
                        <div class="col-md-3">
                            <strong>Status:</strong><br>
                            <% if (ordemCompra.status === 'planejado') { %>
                                <span class="badge bg-info">Planejado</span>
                            <% } else if (ordemCompra.status === 'aprovado') { %>
                                <span class="badge bg-success">Aprovado</span>
                            <% } else if (ordemCompra.status === 'em_transito') { %>
                                <span class="badge bg-warning">Em Trânsito</span>
                            <% } else if (ordemCompra.status === 'recebido') { %>
                                <span class="badge bg-primary">Recebido</span>
                            <% } else if (ordemCompra.status === 'cancelado') { %>
                                <span class="badge bg-danger">Cancelado</span>
                            <% } else { %>
                                <span class="badge bg-secondary"><%= ordemCompra.status %></span>
                            <% } %>
                        </div>
                        <div class="col-md-3">
                            <strong>Valor Total:</strong><br>
                            R$ <%= (ordemCompra.valor_compra_brl || 0).toFixed(2) %>
                        </div>
                        <div class="col-md-3">
                            <strong>Data de Criação:</strong><br>
                            <%= new Date(ordemCompra.created_at).toLocaleString('pt-BR') %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Histórico de Alterações -->
    <div class="row">
        <div class="col-12">
            <div class="card-custom">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-clock text-primary me-2"></i>
                        Histórico de Alterações
                    </h5>
                    <span class="badge bg-primary"><%= historico.length %> alteração(ões)</span>
                </div>
                <div class="card-body">
                    <% if (historico.length === 0) { %>
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-info-circle fa-3x mb-3"></i>
                            <h5>Nenhuma alteração registrada</h5>
                            <p>Esta ordem de compra ainda não teve alterações.</p>
                        </div>
                    <% } else { %>
                        <%
                        // Agrupar alterações por data/hora
                        const groupedHistorico = {};
                        historico.forEach(item => {
                            const dateKey = new Date(item.data_alteracao).toISOString().slice(0, 16); // Agrupa por minuto
                            if (!groupedHistorico[dateKey]) {
                                groupedHistorico[dateKey] = {
                                    items: [],
                                    usuario: item.usuario_nome,
                                    data: item.data_alteracao,
                                    tipo: item.tipo_alteracao
                                };
                            }
                            groupedHistorico[dateKey].items.push(item);
                        });
                        %>

                        <% Object.keys(groupedHistorico).sort().reverse().forEach(dateKey => { %>
                            <% const group = groupedHistorico[dateKey]; %>
                            <div class="timeline-item">
                                <div class="timeline-marker">
                                    <% if (group.tipo === 'criacao') { %>
                                        <i class="fas fa-plus text-success"></i>
                                    <% } else if (group.tipo === 'edicao') { %>
                                        <i class="fas fa-edit text-primary"></i>
                                    <% } else if (group.tipo === 'exclusao') { %>
                                        <i class="fas fa-trash text-danger"></i>
                                    <% } %>
                                </div>
                                <div class="timeline-content">
                                    <div class="d-flex justify-content-between align-items-start mb-2">
                                        <div>
                                            <h6 class="mb-2">
                                                <% if (group.tipo === 'criacao') { %>
                                                    <span class="badge bg-success">Criação</span>
                                                <% } else if (group.tipo === 'edicao') { %>
                                                    <span class="badge bg-primary"><%= group.items.length %> alteração(ões)</span>
                                                <% } else if (group.tipo === 'exclusao') { %>
                                                    <span class="badge bg-danger">Exclusão</span>
                                                <% } %>
                                            </h6>
                                        </div>
                                        <div class="text-end">
                                            <small class="text-muted">
                                                <i class="fas fa-calendar me-1"></i>
                                                <%= new Date(group.data).toLocaleString('pt-BR') %>
                                            </small>
                                            <% if (group.usuario) { %>
                                                <br>
                                                <small class="text-muted">
                                                    <i class="fas fa-user me-1"></i>
                                                    <%= group.usuario %>
                                                </small>
                                            <% } %>
                                        </div>
                                    </div>

                                    <% group.items.forEach(item => { %>
                                        <div class="alteracao-item mb-2 p-2 bg-light rounded">
                                            <div class="d-flex align-items-center justify-content-between">
                                                <strong class="text-primary"><%= getCampoLabel(item.campo_alterado) %>:</strong>
                                                <div class="d-flex align-items-center">
                                                    <% if (item.valor_anterior && item.valor_novo) { %>
                                                        <code class="text-danger me-2"><%= formatarValor(item.campo_alterado, item.valor_anterior) %></code>
                                                        <i class="fas fa-arrow-right text-muted"></i>
                                                        <code class="text-success ms-2"><%= formatarValor(item.campo_alterado, item.valor_novo) %></code>
                                                    <% } else if (item.valor_novo) { %>
                                                        <code class="text-success"><%= formatarValor(item.campo_alterado, item.valor_novo) %></code>
                                                    <% } else { %>
                                                        <span class="text-muted">Alteração registrada</span>
                                                    <% } %>
                                                </div>
                                            </div>
                                        </div>
                                    <% }); %>
                                </div>
                            </div>
                        <% }); %>
                    <% } %>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.timeline {
    position: relative;
    padding-left: 30px;
}

.timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e9ecef;
}

.timeline-item {
    position: relative;
    margin-bottom: 30px;
}

.timeline-item:last-child {
    margin-bottom: 0;
}

.timeline-marker {
    position: absolute;
    left: -22px;
    top: 0;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    background: white;
    border: 2px solid #e9ecef;
    display: flex;
    align-items: center;
    justify-content: center;
    color: #6c757d;
}

.timeline-content {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 15px;
    border-left: 3px solid #007bff;
}

.timeline-content h6 {
    color: #495057;
    font-weight: 600;
}

.badge {
    font-size: 0.75em;
}

.alteracao-item {
    border-left: 3px solid #007bff;
    transition: all 0.2s ease;
}

.alteracao-item:hover {
    background-color: #e9ecef !important;
    border-left-color: #0056b3;
}
</style>