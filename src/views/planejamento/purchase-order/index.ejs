<div class="content-wrapper">
    <!-- Header da Página -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0">
                <i class="fas fa-file-contract text-primary me-2"></i>
                Purchase Orders
            </h1>
            <p class="text-muted mb-0">Gerencie as ordens de compra aprovadas</p>
        </div>
        <div>
            <a href="/planejamento/ordem-compra" class="btn btn-secondary-custom">
                <i class="fas fa-arrow-left me-2"></i>
                Voltar para OC
            </a>
        </div>
    </div>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card-custom text-center">
                <div class="card-body">
                    <i class="fas fa-file-contract fa-2x text-primary mb-2"></i>
                    <h4 class="mb-0"><%= purchaseOrders.length %></h4>
                    <small class="text-muted">Total de POs</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-custom text-center">
                <div class="card-body">
                    <i class="fas fa-clock fa-2x text-warning mb-2"></i>
                    <h4 class="mb-0"><%= purchaseOrders.filter(po => po.status === 'aprovado').length %></h4>
                    <small class="text-muted">Aprovadas</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-custom text-center">
                <div class="card-body">
                    <i class="fas fa-truck fa-2x text-info mb-2"></i>
                    <h4 class="mb-0"><%= purchaseOrders.filter(po => po.status === 'em_transito').length %></h4>
                    <small class="text-muted">Em Trânsito</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card-custom text-center">
                <div class="card-body">
                    <i class="fas fa-check-circle fa-2x text-success mb-2"></i>
                    <h4 class="mb-0"><%= purchaseOrders.filter(po => po.status === 'recebido').length %></h4>
                    <small class="text-muted">Recebidas</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabela de Purchase Orders -->
    <div class="card-custom">
        <div class="card-header">
            <h5 class="mb-0">
                <i class="fas fa-list me-2"></i>
                Lista de Purchase Orders
            </h5>
        </div>
        <div class="card-body">
            <% if (purchaseOrders.length === 0) { %>
                <div class="text-center py-5">
                    <i class="fas fa-file-contract fa-3x text-muted mb-3"></i>
                    <h5 class="text-muted">Nenhuma Purchase Order encontrada</h5>
                    <p class="text-muted">As ordens de compra aprovadas aparecerão aqui.</p>
                    <a href="/planejamento/ordem-compra" class="btn btn-primary-custom">
                        <i class="fas fa-plus me-2"></i>
                        Criar Ordem de Compra
                    </a>
                </div>
            <% } else { %>
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Status</th>
                                <th>Família</th>
                                <th>Tamanho</th>
                                <th>Cor</th>
                                <th>SKU</th>
                                <th>Quantidade</th>
                                <th>Valor Total (R$)</th>
                                <th>ETD Planejado</th>
                                <th>Ações</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% purchaseOrders.forEach(ordem => { %>
                                <tr>
                                    <td>
                                        <strong>#<%= ordem.id %></strong>
                                    </td>
                                    <td>
                                        <% if (ordem.status === 'aprovado') { %>
                                            <span class="badge bg-success">Aprovado</span>
                                        <% } else if (ordem.status === 'em_transito') { %>
                                            <span class="badge bg-info">Em Trânsito</span>
                                        <% } else if (ordem.status === 'recebido') { %>
                                            <span class="badge bg-success">Recebido</span>
                                        <% } else { %>
                                            <span class="badge bg-secondary"><%= ordem.status %></span>
                                        <% } %>
                                    </td>
                                    <td><%= ordem.familia_nome || 'N/A' %></td>
                                    <td><%= ordem.tamanho_nome || 'N/A' %></td>
                                    <td><%= ordem.cor_nome || 'N/A' %></td>
                                    <td>
                                        <code><%= ordem.sku %></code>
                                    </td>
                                    <td><%= ordem.quantidade %></td>
                                    <td>R$ <%= Number(ordem.valor_compra_brl).toFixed(2) %></td>
                                    <td><%= new Date(ordem.etd_planejado).toLocaleDateString('pt-BR') %></td>
                                    <td>
                                        <a href="/planejamento/purchase-order/<%= ordem.id %>" class="btn btn-sm btn-info-custom me-1" title="Visualizar">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="/planejamento/ordem-compra/<%= ordem.id %>/historico" class="btn btn-sm btn-secondary-custom" title="Histórico">
                                            <i class="fas fa-history"></i>
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } %>
        </div>
    </div>
</div>